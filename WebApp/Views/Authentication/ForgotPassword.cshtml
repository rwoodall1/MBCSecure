@model WebApp.Models.ForgotPasswordViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="forgotpassword-section" class="row">
    @using (Html.BeginForm("ForgotPassword", "Authentication", FormMethod.Post, new { @class = "forgot-password-form col-sm-6 col-sm-offset-3", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <fieldset>
            <div class="row">
                <div class="form-group">
                    @Html.Label("Email", htmlAttributes: new { @class = "" })
                    @Html.TextBoxFor(m => m.Email, new { @placeholder = "Enter Email", @autofocus = "autofocus", @class = "form-control" })
                </div>
            </div>

            <div class="row">
                <div class="form-group">
                    <input type="submit" class="btn btn-default forgot-password-button" value="Submit">
                </div>
            </div>

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div id="notification-alert" class="alert alert-danger" role="alert" style="display:none">
                <p id="notification-message">Error!</p>
            </div>

        </fieldset>
    }
</section>